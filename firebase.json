{
	"database": {
		"rules": "database.rules.json"
	},
	"functions": {
		"predeploy": [
			"npm --prefix \"$RESOURCE_DIR\" run lint"
		],
		"source": "functions"
	},
	"hosting": [
		{
			"target": "astra-exchange",
			"public": "public",
			"ignore": [
				"firebase.json",
				"**/.*",
				"**/node_modules/**"
			],
			"rewrites": [
				{
					"source": "/documentation",
					"destination": "/documentation.html"
				},
				{
					"source": "/companies",
					"destination": "/companies.html"
				},
				{
					"source": "/api",
					"destination": "/api/all.js"
				},
				{
					"source": "/tables",
					"destination": "/tables.html"
				},
				{
					"source": "**",
					"function": "app"
				}
			]
		},
		{
			"target": "opensource-astra-exchange",
			"public": "opensource",
			"ignore": [
				"firebase.json",
				"**/.*",
				"**/node_modules/**"
			],
			"rewrites": [
				{
					"source": "**",
					"function": "opensource"
				}
			]
		}
	],
	"storage": {
		"rules": "storage.rules"
	},
	"firestore": {
		"rules": "firestore.rules",
		"indexes": "firestore.indexes.json"
	}
}